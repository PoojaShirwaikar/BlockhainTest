	$(function() {
		$("#click1").click(function() {
			$("#thediv").slideUp(2000, "easeInElastic");
		})

		$("#slidedown").click(function() {
			$("#thediv").slideDown(2000, "easeOutBounce");
		})

		$("#slidetoggle").click(function() {
			$("#thediv").slideToggle();
		})
	});
