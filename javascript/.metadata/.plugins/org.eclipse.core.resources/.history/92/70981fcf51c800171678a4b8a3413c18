<script>
	$(function() {
		$("#Fadeion").click(function() {
			$("#thediv").slideUp(2000, "easeInElastic");
		})

		$("#Fadeout").click(function() {
			$("#thediv").slideDown(2000, "easeOutBounce");
		})

		$("#Fadeto3").click(function() {
			$("#thediv").slideToggle();
		})
	});
</script>


