	<script>
		var name1 = localStorage.getItem('name');
		console.log(name1);
		$("h1").append(" Welcome " + name1);

		function check1() {
			localStorage.removeItem('name');
			$("h1").empty();
			$("h1").append(" Welcome ");

		}

		$("body").on("click", "li", function() {
			sessionStorage.setItem('item', $(this).text());
			$("div").append("<br/>"+$(this).text());
		})
	</script>



